<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.wagn0070.sportscores" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Jacob Wagner 2:Nill</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="wagn0070@algonquinlive.com" href="algonquincollege.com">
        Jacob Wagner
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
      <!-- you can use any density that exists in the Android project -->
      <splash src="res/screens/screen-hdpi-landscape.png" density="land-hdpi"/>
      <splash src="res/screens/screen-xxhdpi-landscape.png" density="land-xxhdpi"/>
      <splash src="res/screens/screen-mdpi-landscape.png" density="land-mdpi"/>
      <splash src="res/screens/screen-xhdpi-landscape.png" density="land-xhdpi"/>
        <splash src="res/screens/screen-xxxhdpi-landscape.png" density="land-xxxxhdpi"/>

      <splash src="res/screens/screen-hdpi-portrait.png" density="port-hdpi"/>
      <splash src="res/screens/screen-xxhdpi-portrait.png" density="port-xxhdpi"/>
      <splash src="res/screens/screen-mdpi-portrait.png" density="port-mdpi"/>
      <splash src="res/screens/screen-xhdpi-portrait.png" density="port-xhdpi"/>
        <splash src="res/screens/screen-xxxhdpi-portrait.png" density="port-xxxhdpi"/>
  
        <icon density="mdpi" src="res/icons/icon-48-mdpi.png" />
         <icon density="hdpi" src="res/icons/icon-72-hdpi.png" />
         <icon density="xhdpi" src="res/icons/icon-96-xhdpi.png" />
         <icon density="xxhdpi" src="res/icons/icon-144-xxhdpi.png" />
         <icon density="xxxhdpi" src="res/icons/icon-192-xxxhdpi.png" />
        
        
    <preference name="SplashScreen" value="screen" />
  <preference name="AutoHideSplashScreen" value="true" /> <!-- don't wait for script to hide the splashscreen -->
  <preference name="SplashScreenDelay" value="5000" />  <!-- wait 10 seconds before hiding splashscreen -->
  <preference name="SplashMaintainAspectRatio" value="true" />
  <preference name="SplashShowOnlyFirstTime" value="false" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
